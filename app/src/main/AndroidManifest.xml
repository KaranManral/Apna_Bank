<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.apnabank">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_bank_foreground"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_bank_foreground"
        android:supportsRtl="true"
        android:theme="@style/Theme.ApnaBank">
        <activity
            android:name=".Withdraw"
            android:exported="false" />
        <activity
            android:name=".Deposit"
            android:exported="false" />
        <activity
            android:name=".Transaction"
            android:exported="false" />
        <activity
            android:name=".Profile"
            android:exported="false" />
        <activity
            android:name=".LoginScreen"
            android:exported="false"
            android:launchMode="singleInstance"
            android:screenOrientation="portrait" />
        <activity
            android:name=".HomeScreen"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".LoadScreen"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>